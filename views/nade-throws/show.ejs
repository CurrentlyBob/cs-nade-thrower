<%- include('../partials/html-head') %> <%- include('../partials/nav') %>

<section>
  <p>Nade Throw Posted By <%= nadeThrow.creator.name %></p>
  <img src="<%= nadeThrow.creator.avatar %>" alt="<%= nadeThrow.creator.name %>'s avatar"/>
  <h1><%= nadeThrow.map %> Nade Throw💣💣💣</h1>
  <h2>
    This nade throw is a <%= nadeThrow.jumpThrow ? 'Jump Throw' : 'Standard Throw' %>
  </h2>
  <% if(user) { %>
  <form action="/nade-throws/<%= nadeThrow._id %>/flip-jump-throw?_method=PATCH" method="post">
    <button class="btn" type="submit">
      Apply <%= nadeThrow.jumpThrow ? 'standard throw' : 'jump throw' %>?
    </button>
  </form>
  <% } %> <% if (nadeThrow.creator.equals(user?.profile._id)) { %>
  <a href="/nade-throws/<%= nadeThrow._id %>/edit">
    <button class="btn">Edit this Nade Throw</button>
  </a>
  <form action="/nade-throws/<%= nadeThrow._id %>?_method=DELETE" method="POST">
    <button class="btn" type="submit">Delete this Nade Throw ☠️☠️</button>
  </form>
  <% } %>
  <h2>Comments</h2>
  <% if (user) { %>
  <h3>Add a Comment</h3>
  <form action="/nade-throws/<%= nadeThrow._id %>/comments" method="POST">
    <textarea name="content"></textarea><br />
    <button>Add Comment</button>
  </form>
  <% } %>
</section>

<%- include('../partials/footer') %>