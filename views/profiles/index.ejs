<%- include('../partials/html-head') %>

<link rel="stylesheet" href="/stylesheets/profiles/index.css">
<%- include('../partials/nav') %>

<main>
    <div class="prof-container">
        <% profiles.forEach(profile => { %>
            <a href="text-dec" href="/profiles/<%= profile._id %>">
            <div class="card">
                <img src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
                <div class="prof-body">
                    <h1 class="prof-title"><%= profile.name %></h1>
                </div>
            </div>
        </a>
            <% }) %>
    </div>
</main>
<%- include('../partials/footer') %>
