<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <div class="container mt-5">
    <div class="row">
      <% profiles.forEach(profile => { %>
      <div class="col-md-2 col-sm-6 mb-4">
        <a href="/profiles/<%= profile._id %>" class="text-decoration-none">
          <div class="card">
            <img
              src="<%= profile.avatar %>"
              alt="<%= profile.name %>'s avatar"
              class="card-img-top "
            />
            <div class="card-body">
              <p class="card-text"><%= profile.name %></h1>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
    </div>
  </div>
</main>
<%- include('../partials/footer') %>
